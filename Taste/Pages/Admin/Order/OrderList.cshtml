@page
@model Taste.Pages.Admin.Order.OrderListModel
@{
    ViewData["Title"] = "OrderList";
}

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Order's List</h2>
        </div>
        <div class="col-6 text-right">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;">
                    <li class="list-group-item"> Cancelled </li>
                </a>
                <a style="text-decoration:none;">
                    <li class="list-group-item"> Completed </li>
                </a>
                <a style="text-decoration:none;">
                    <li class="list-group-item"> Inprocess </li>
                </a>
            </ul>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Name</th>
                <th>Order Total</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/orderList.js"></script>
}

